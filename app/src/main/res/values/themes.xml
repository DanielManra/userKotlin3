<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UserKotlin" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!--
         Primary brand color.

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        -->

        <item name="colorPrimary">@color/colorButton</item>
        <item name="colorPrimaryVariant">@color/colorblack</item>
        <item name="colorOnPrimary">@color/colorButton</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/colorButton</item>
        
        
    </style>

    <style name="Theme.UserKotlin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UserKotlin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UserKotlin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Camara -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingBottom">25dp</item>

    </style>
    
    <style name="CardViewTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">3dp</item>
        <item name="contentPaddingTop">5dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/colorGray</item>
    </style>

    <style name="CardViewTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="cardCornerRadius">100dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="CardViewTheme3" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">3dp</item>
        <item name="contentPaddingTop">5dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/colorGray2</item>
    </style>
    


</resources>